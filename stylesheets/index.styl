.index-view
  & > header
    padding: 6rem 0
    text-align: center
    h1
      font-size: 4rem
      line-height: 1.4
      margin-bottom: 0.5rem
    h2
      font-size: 1.6rem
      line-height: 1.3
      color: $main
    .cta
      display: inline-block
      margin-top: 4rem
      font-size: 1rem
      padding: 1rem
      border: 1px solid $main
      color: $main
      text-transform: uppercase
      font-weight: 300
      letter-spacing: 0.3rem
      border-radius: 2px
      text-decoration: none
      transition: all 0.3s
      position: relative
      &:hover
        box-shadow: 0 2px 12px rgba(0,0,0, 0.15)
      &:active
        top: 1px
        transition: all 0.05s
        box-shadow: 0 1px 4px rgba(0,0,0, 0.25)

  .features
    -webkit-column-width: 15rem
    -webkit-column-gap: 2.5rem
    -ms-column-width: 15rem
    -ms-column-gap: 2.5rem
    column-width: 15rem
    column-gap: 2.5rem
    & > li
      margin: 2rem 0
      &:first-child
        margin-top: 0
    h3
      font-weight: bold
      font-size: 1rem
      color: $black * 0.7
    p
      font-size: 0.9rem
  
  .side-bar
    float: right
    width: 11rem
    margin: 3rem 0
    sticky()
    top: 2rem

  .main-content
    width: calc(100% - 15rem)
    :first-child
      margin-top: 0
